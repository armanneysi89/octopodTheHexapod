&pinctrl {
    i2c0_default: i2c0_default {
        group1 {
            pinmux = <I2C0_SDA_GPIO21>,
                     <I2C0_SCL_GPIO22>;
            bias-pull-up;
        };
    };
};

&i2c0 {
    status = "okay";
    clock-frequency = <I2C_BITRATE_STANDARD>;

    pca9685: pca9685@40 {
        compatible = "i2c-device";
        reg = <0x40>;
        status = "okay";
    };
};

